    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit Debug",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/streamlit_app/app.py"  // Adjust path if needed
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "STREAMLIT_LOG_LEVEL": "debug"
            },
            "stopOnEntry": false
        }
    ]   
}